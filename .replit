modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask API"

[[workflows.workflow]]
name = "React Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx react-scripts start"
waitForPort = 5000

[[workflows.workflow]]
name = "Flask API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api.py"
waitForPort = 5001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
